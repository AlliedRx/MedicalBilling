    <script>
        // Initialize visualization
        function createGramVisualization() {
            const gContainer = document.getElementById('g-container');
            gContainer.innerHTML = '';
            
            // Create 1000 gram blocks (simplified for visualization)
            for (let i = 0; i < 100; i++) { // Show 100 blocks to represent 1000
                const gBlock = document.createElement('div');
                gBlock.className = 'g-block';
                gBlock.textContent = '10g'; // Each block represents 10g
                gContainer.appendChild(gBlock);
            }
        }
        
        // Create initial visualization
        createGramVisualization();
        
        // Update visualization based on input
        function updateVisualization(kgValue) {
            const kgBlock = document.getElementById('kg-block');
            kgBlock.textContent = `${kgValue} kg`;
            
            // Update the number of gram blocks (simplified)
            const gContainer = document.getElementById('g-container');
            gContainer.innerHTML = '';
            
            const totalGrams = kgValue * 1000;
            const blocksToShow = Math.min(100, totalGrams / 10); // Show max 100 blocks
            
            for (let i = 0; i < blocksToShow; i++) {
                const gBlock = document.createElement('div');
                gBlock.className = 'g-block';
                const gramsPerBlock = totalGrams / blocksToShow;
                gBlock.textContent = `${Math.round(gramsPerBlock)}g`;
                gContainer.appendChild(gBlock);
            }
            
            if (blocksToShow < totalGrams / 10) {
                const moreText = document.createElement('div');
                moreText.textContent = `... and ${totalGrams - (blocksToShow * (totalGrams/blocksToShow))} more`;
                moreText.style.width = '100%';
                moreText.style.textAlign = 'center';
                moreText.style.marginTop = '10px';
                moreText.style.fontWeight = 'bold';
                gContainer.appendChild(moreText);
            }
        }
        
        // Convert kg to g
        document.getElementById('convert-btn').addEventListener('click', function() {
            const kgInput = document.getElementById('kg-input');
            const kgValue = parseFloat(kgInput.value);
            const resultDiv = document.getElementById('conversion-result');
            const stepDiv = document.getElementById('step-by-step');
            const stepSolution = document.getElementById('step-solution');
            
            if (isNaN(kgValue) || kgValue < 0) {
                resultDiv.textContent = "Please enter a valid positive number";
                resultDiv.className = "result incorrect";
                stepDiv.style.display = 'none';
                return;
            }
            
            const grams = kgValue * 1000;
            
            // Update visualization
            updateVisualization(kgValue);
            
            // Show result
            resultDiv.textContent = `${kgValue} kg = ${grams.toLocaleString()} g`;
            resultDiv.className = "result correct";
            
            // Show step-by-step solution
            stepDiv.style.display = 'block';
            stepSolution.innerHTML = `
                <strong>Step 1:</strong> Identify the conversion factor: 1 kg = 1000 g<br>
                <strong>Step 2:</strong> Set up the equation: ${kgValue} kg × 1000 = ? g<br>
                <strong>Step 3:</strong> Perform the multiplication: ${kgValue} × 1000 = ${grams.toLocaleString()}<br>
                <strong>Step 4:</strong> State the answer: ${kgValue} kg = ${grams.toLocaleString()} g
            `;
        });
        
        // Reset conversion tool
        document.getElementById('reset-btn').addEventListener('click', function() {
            document.getElementById('kg-input').value = '1';
            document.getElementById('conversion-result').textContent = '';
            document.getElementById('conversion-result').className = 'result';
            document.getElementById('step-by-step').style.display = 'none';
            updateVisualization(1);
        });
        
        // Exercise answers
        const exerciseAnswers = {
            1: 3500,   // 3.5 kg = 3500 g
            2: 750,    // 0.75 kg = 750 g
            3: 2250,   // 2.25 kg = 2250 g
            4: 500,    // 0.5 kg = 500 g
            5: 1800,   // 1.8 kg = 1800 g
            6: 25      // 0.025 kg = 25 g
        };
        
        const challengeAnswers = {
            1: 1200000, // 1.2 kg = 1200 g = 1,200,000 mg
            2: 3        // 0.6 kg = 600 g ÷ 200 bottles = 3 g/bottle
        };
        
        // Check exercise answers
        document.querySelectorAll('.check-exercise').forEach(button => {
            button.addEventListener('click', function() {
                const exerciseNum = this.getAttribute('data-exercise');
                const answer = parseFloat(document.getElementById(`exercise${exerciseNum}`).value);
                const resultDiv = document.getElementById(`result${exerciseNum}`);
                const exerciseCard = document.getElementById(`exercise-card-${exerciseNum}`);
                
                if (isNaN(answer)) {
                    resultDiv.textContent = "Please enter a number";
                    resultDiv.className = "result incorrect";
                    exerciseCard.classList.remove('correct', 'incorrect');
                    exerciseCard.classList.add('incorrect');
                    return;
                }
                
                const correctAnswer = exerciseAnswers[exerciseNum];
                const tolerance = 0.01;
                
                if (Math.abs(answer - correctAnswer) < tolerance) {
                    resultDiv.textContent = `Correct! ${exerciseAnswers[exerciseNum]} g`;
                    resultDiv.className = "result correct";
                    exerciseCard.classList.remove('correct', 'incorrect');
                    exerciseCard.classList.add('correct');
                } else {
                    resultDiv.textContent = `Not quite. The correct answer is ${exerciseAnswers[exerciseNum]} g (${getCalculationSteps(exerciseNum)})`;
                    resultDiv.className = "result incorrect";
                    exerciseCard.classList.remove('correct', 'incorrect');
                    exerciseCard.classList.add('incorrect');
                }
            });
        });
        
        // Function to get calculation steps for exercises
        function getCalculationSteps(exerciseNum) {
            const steps = {
                1: "3.5 kg × 1000 = 3500 g",
                2: "0.75 kg × 1000 = 750 g",
                3: "2.25 kg × 1000 = 2250 g",
                4: "0.5 kg × 1000 = 500 g",
                5: "1.8 kg × 1000 = 1800 g",
                6: "0.025 kg × 1000 = 25 g"
            };
            return steps[exerciseNum];
        }
        
        // Check challenge problems
        document.getElementById('check-challenge1').addEventListener('click', function() {
            const answer = parseFloat(document.getElementById('challenge1').value);
            const resultDiv = document.getElementById('challenge-result1');
            
            if (isNaN(answer)) {
                resultDiv.textContent = "Please enter a number";
                resultDiv.className = "result incorrect";
                return;
            }
            
            const correctAnswer = challengeAnswers[1];
            const tolerance = 100; // Allow some rounding
            
            if (Math.abs(answer - correctAnswer) < tolerance) {
                resultDiv.textContent = `Excellent! 1.2 kg = 1200 g = 1,200,000 mg`;
                resultDiv.className = "result correct";
            } else {
                resultDiv.textContent = `Let's work through it: 1.2 kg × 1000 = 1200 g; 1200 g × 1000 = 1,200,000 mg`;
                resultDiv.className = "result incorrect";
            }
        });
        
        document.getElementById('check-challenge2').addEventListener('click', function() {
            const answer = parseFloat(document.getElementById('challenge2').value);
            const resultDiv = document.getElementById('challenge-result2');
            
            if (isNaN(answer)) {
                resultDiv.textContent = "Please enter a number";
                resultDiv.className = "result incorrect";
                return;
            }
            
            const correctAnswer = challengeAnswers[2];
            const tolerance = 0.1;
            
            if (Math.abs(answer - correctAnswer) < tolerance) {
                resultDiv.textContent = `Perfect! 0.6 kg = 600 g; 600 g ÷ 200 bottles = 3 g/bottle`;
                resultDiv.className = "result correct";
            } else {
                resultDiv.textContent = `Solution: 0.6 kg = 600 g; 600 g ÷ 200 bottles = 3 g per bottle`;
                resultDiv.className = "result incorrect";
            }
        });
        
        // Navigation buttons
        document.getElementById('prev-lesson').addEventListener('click', function() {
            alert('This would take you to the previous lesson in a full course.');
        });
        
        document.getElementById('next-lesson').addEventListener('click', function() {
            alert('This would take you to the next lesson on gram to milligram conversion.');
        });
        
        // Initialize with example
        updateVisualization(1);
    </script>
</body>
</html>
